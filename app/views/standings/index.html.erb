<% provide(:title, "Standings") %>
<div class= "container">
  
  <h1> 2017 Standings</h1>
  
  <table class= "table table-responsive">
    <thead>
      <tr>
        <th class= "col-sm-2"> POSITION</th>
        <th class= "col-sm-3"> TEAM</th>
        <th class= "col-sm-2">POINTS</th>
        <th class= "col-sm-2">NET</th>
        <th class= "col-sm-4">CAR</th>
      </tr>
    </thead>
  </table>
  <% @event_teams.each_with_index do |event_team, index| %>
    <table class="table table-responsive">
      <thead>
        <tr>
          <th class= "col-sm-2"> </th>
          <th class= "col-sm-3"> </th>
          <th class= "col-sm-2"> </th>
          <th class= "col-sm-2"> </th>
          <th class= "col-sm-4"> </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
           <%= index+1 %>
          </td>
          <td>
           <%= event_team.team.team_name %> 
           <% if current_user %>
           <%= link_to "Delete", [event_team.race_schedule, event_team], method: :delete, data: { confirm: 'Are you sure?' } %>
           <% end %>
          </td>
          <td>
           <%= event_team.team.team_points %>
          </td>
          <td>
           <%= event_team.team.team_points - @event_teams[0].team.team_points %>
          </td>
          <td>
            <% if event_team.team.car %> 
              <%= event_team.team.car %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
