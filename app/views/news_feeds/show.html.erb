<% provide(:title, @news_feed.title) %>
<div class="container" id:"show_news_feed" >
  <div class="row">
    <div class= "col-md-10 col-md-offset-1">
      
        <div> 
          <h3><%= @news_feed.title %></h3>
          <p><%= @news_feed.created_at.strftime("%F") %></p>
          <p>
            <%= link_to 'An an Other Post', new_news_feed_path, class: "btn btn-primary" %> 
            
          </p>
        </div>
        <div>
         
            <p><%= image_tag @news_feed.picture.url %></p>
            <br>
            <% if @news_feed.race_schedule_id %>
           <span>
             <strong>Event: </strong> <%= @news_feed.race_schedule.details %>
            
            <% end %>
            <% if @news_feed.team_id %> 
             <strong> Team: </strong> <%= @news_feed.team.team_name %>
            <% end %>
          </span>
          
            
          
          <p style="white-space: pre-wrap"><strong>Info: </strong><%= @news_feed.content %></p>
        </div>
        <div >
          <% if current_user %>
            <%= link_to 'Edit', edit_news_feed_path(@news_feed) %> | 
            <%= link_to 'Delete', @news_feed, method: :delete, data: { confirm: "Are you sure?" } %>  
          <% end %>
            
        </div>
      
    </div>
  </div>
</div>