<div>
<% @sponsors.limit(2).each do |sponsor| %>  
  <%= link_to sponsor.web_site, target: '_blank' do %>
      <span class= "logo img-responsive center-block">
        <%= image_tag sponsor.picture.url %>
        <% if current_user %>
        <%= link_to "View or Edit", sponsor %>
        <% end %> 
      </span>
    <% end %>
    
  </div>
  
<% end %> 
  <% if current_user %>
    <div class= "text-center">
    <%= link_to "Add New Sponsor", new_sponsor_path, class: "btn btn-primary" %>
    </div>
  <% end %> 

  <% if @sponsors.count > 2 %> 
      <%= link_to "See more Sponsors ...", sponsors_path %> 
    <% end %> 
</div>