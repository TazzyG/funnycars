<%= form_for(@event_team) do |f| %>
  <div class= "form-group">
    <%= f.hidden_field :race_schedule_id %>
  </div>
  <div class= "form_tag">
    <%= f.label :Team %> <br>
    <%= f.collection_select(:team_id, 
          Team.all, 
          :id,
          :team_name) %>
  </div>
  <div class= "form-group">
    <%= f.number_field :race_result, placeholder: "race result" %>
  </div>
  <div class="actions btn-group">
    <%= f.submit "Submit", class: "btn" %>
  </div>

<% end %>