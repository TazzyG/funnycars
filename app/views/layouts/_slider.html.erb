
<div class="row intro">
  <div class="col-md-offset-1 col-md-6">
    <% if current_user %>
      <h2>Edit the Slider Images</h2>
      <%= link_to "New Picture", new_article_path, class: "btn btn-primary" %>
    <% else %>
    <div>
  
      </div>
      <div id="myCarousel" class="carousel slide show_cars" data-ride="carousel">
     
      <!-- Indicators -->
      
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item active center-block">
          <h4 class="text-muted"><%= @articles.first.title.titleize %></h4>
          <%= image_tag @articles.first.picture.url(:slider) %>
          <br>
           <em><%= @articles.first.content %></em>
        </div>
        <% @articles.each do |article| %>
          <div class="item center-block">
            <h4 class="text-muted"><%= article.title.titleize %></h4>
            <%= image_tag article.picture.url(:slider) %>
            <br>
            <em><%= article.content %> </em>
          </div>
        <% end %>
      </div>

  <!-- Left and right controls -->
  
</div>
    <% end %>
  </div>
  <div class="col-md-5 sponsors">
    <% if current_user %>
      <h2>Edit the Sponsor Logos</h2>
    <% else %>
      <div>
    <%= link_to href: 'http://www.trailtire.com/' do %>
      <span class= "logo img-responsive center-block">
        <%= image_tag  "trailtirethumb.png" %>
      </span>
    <% end %>
    </div>
      <div>
        <%= link_to href: 'https://surewerx.com/' do %>
          <span class= "logo img-responsive center-block">
            <%= image_tag  "surewerx.png" %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
