    </div>
    <div class="form-group">
      <%= f.text_field :instagram, autofocus: true, class: "form-control", placeholder: "https://www.instagram.com/team_instagram" %>
    </div>
  
    <div class="btn-group">
      <%= f.submit "Submit team", class: "btn btn-primary" %>
