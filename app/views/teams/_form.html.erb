      <%= f.text_field :car, autofocus: true, class: "form-control", placeholder: "Car Description" %>
    </div>
    <div class="form-group">
      <%= f.text_field :engine, autofocus: true, class: "form-control", placeholder: "Engine" %>
    </div>
    <div class="form-group">
      <%= f.text_field :chassis, autofocus: true, class: "form-control", placeholder: "Chassis" %>
    </div>
    <div class="form-group">
