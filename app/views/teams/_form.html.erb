      <%= f.text_field :crew_chief, autofocus: true, class: "form-control", placeholder: "Crew Chief" %>
    </div>
    <div class="form-group">
      <%= f.text_field :crew, autofocus: true, class: "form-control", placeholder: "Crew" %>
    </div>
    <div class="form-group">
      <%= f.text_field :car_name, autofocus: true, class: "form-control", placeholder: "Car Name" %>
    </div>
