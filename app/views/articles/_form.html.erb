      <%= f.label :picture %>
      <%= f.file_field :picture, class: "form-control", placeholder: "Select Feature Image" %>
      <%= f.hidden_field :picture_cache %>
    </div>
    <div class="form-group">
      <%= f.text_field :title, autofocus: true, class: "form-control", placeholder: "One to Two words" %>
    </div>
    <div class="form-group">
      <%= f.text_area :content, autofocus: true, class: "form-control", placeholder: "Summary Information, max a paragraph" %>
    </div>
    <div class="btn-group">
      <%= f.submit "Submit Article", class: "btn btn-primary" %>
    </div>
<% end %>

