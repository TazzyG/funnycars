<div class= "containter text-left">
  <div class= "row">
    <div class= "col-md-offset-1 col-md-10">
    <p style = "color:<%= @race_schedule.color; %>">
      
        <%= @race_schedule.race_start_date.strftime("%F")%>
        <%= @race_schedule.race_end_date.strftime("%F")%>
        <%= @race_schedule.location %>
        <%= @race_schedule.details %>
        <%= @race_schedule.race_type %>. 
    </p>
    <h3>Add a Team to the Event</h3>
    <%= render @race_schedule.event_teams %> 
    <%= render "event_teams/form"%> 
    </div>
  </div>
  <div class = "text-center">
   <%= link_to "add new race event", new_race_schedule_path, class: "btn btn-primary" %>
  </div>
</div>